<%= form_for(@tipo_evento) do |f| %>
  <% if @tipo_evento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tipo_evento.errors.count, "erro") %> Não foi possível salvar Tipo de Evento:</h2>

      <ul>
      <% @tipo_evento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nome %><br>
    <%= f.text_field :Nome %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
